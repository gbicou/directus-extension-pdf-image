{
	"name": "@bicou/directus-extension-pdf-image",
	"description": "Directus extension to create a screenshot image for each uploaded PDF document",
	"icon": "extension",
	"homepage": "https://github.com/gbicou/directus-extension-pdf-image",
	"author": "Benjamin VIELLARD <bicou@bicou.com>",
	"license": "MIT",
	"repository": "github:gbicou/directus-extension-pdf-image",
	"version": "0.0.8",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-hook",
		"pdf",
		"image"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"test": "vitest run",
		"lint": "eslint"
	},
	"dependencies": {
		"pdf-to-img": "^5.0.0"
	},
	"devDependencies": {
		"@directus/api": "33.1.1",
		"@directus/extensions-sdk": "17.0.7",
		"@directus/sdk": "21.1.0",
		"@eslint/js": "9.39.2",
		"@stylistic/eslint-plugin": "5.7.1",
		"@types/node": "22.19.8",
		"dotenv": "17.2.4",
		"eslint": "9.39.2",
		"rollup-plugin-node-externals": "8.1.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.54.0",
		"vitest": "4.0.18"
	},
	"peerDependencies": {
		"@directus/api": "^29.1.1 || ^32.0.0 || ^33.0.0",
		"@directus/extensions-sdk": "^16.0.0 || ^17.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@10.29.1+sha512.48dae233635a645768a3028d19545cacc1688639eeb1f3734e42d6d6b971afbf22aa1ac9af52a173d9c3a20c15857cfa400f19994d79a2f626fcc73fccda9bbc",
	"pnpm": {
		"onlyBuiltDependencies": [
			"argon2",
			"canvas",
			"esbuild",
			"isolated-vm",
			"sharp"
		],
		"ignoredBuiltDependencies": [
			"oracledb",
			"sqlite3"
		]
	}
}
