{
	"name": "@bicou/directus-extension-pdf-image",
	"description": "Directus extension to create a screenshot image for each uploaded PDF document",
	"icon": "extension",
	"homepage": "https://github.com/gbicou/directus-extension-pdf-image",
	"author": "Benjamin VIELLARD <bicou@bicou.com>",
	"license": "MIT",
	"repository": "github:gbicou/directus-extension-pdf-image",
	"version": "0.0.4",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-hook",
		"pdf",
		"image"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"test": "vitest run",
		"lint": "eslint"
	},
	"dependencies": {
		"pdf-to-img": "4.4.0"
	},
	"devDependencies": {
		"@directus/api": "25.0.1",
		"@directus/extensions-sdk": "13.0.3",
		"@directus/sdk": "19.0.1",
		"@eslint/js": "^9.21.0",
		"@stylistic/eslint-plugin": "^4.1.0",
		"@types/node": "^22.13.8",
		"dotenv": "16.4.7",
		"eslint": "^9.21.0",
		"rollup-plugin-node-externals": "8.0.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.25.0",
		"vitest": "3.0.9"
	},
	"peerDependencies": {
		"@directus/api": "25.0.1",
		"@directus/extensions-sdk": "13.0.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@10.6.4+sha512.da3d715bfd22a9a105e6e8088cfc7826699332ded60c423b14ec613a185f1602206702ff0fe4c438cb15c979081ce4cb02568e364b15174503a63c7a8e2a5f6c",
	"pnpm": {
		"onlyBuiltDependencies": [
			"argon2",
			"canvas",
			"esbuild",
			"isolated-vm",
			"sharp"
		],
		"ignoredBuiltDependencies": [
			"oracledb",
			"sqlite3"
		]
	}
}
