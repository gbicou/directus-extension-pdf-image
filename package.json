{
	"name": "@bicou/directus-extension-pdf-image",
	"description": "Directus extension to create a screenshot image for each uploaded PDF document",
	"icon": "extension",
	"homepage": "https://github.com/gbicou/directus-extension-pdf-image",
	"author": "Benjamin VIELLARD <bicou@bicou.com>",
	"license": "MIT",
	"repository": "github:gbicou/directus-extension-pdf-image",
	"version": "0.0.5",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-hook",
		"pdf",
		"image"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"test": "vitest run",
		"lint": "eslint"
	},
	"dependencies": {
		"pdf-to-img": "^4.5.0"
	},
	"devDependencies": {
		"@directus/api": "29.1.1",
		"@directus/extensions-sdk": "16.0.0",
		"@directus/sdk": "20.0.2",
		"@eslint/js": "9.37.0",
		"@stylistic/eslint-plugin": "5.2.3",
		"@types/node": "22.18.6",
		"dotenv": "17.2.3",
		"eslint": "9.37.0",
		"rollup-plugin-node-externals": "8.1.0",
		"typescript": "5.9.2",
		"typescript-eslint": "8.44.1",
		"vitest": "3.2.4"
	},
	"peerDependencies": {
		"@directus/api": "^29.1.1",
		"@directus/extensions-sdk": "^16.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
	"pnpm": {
		"onlyBuiltDependencies": [
			"argon2",
			"canvas",
			"esbuild",
			"isolated-vm",
			"sharp"
		],
		"ignoredBuiltDependencies": [
			"oracledb",
			"sqlite3"
		]
	}
}
