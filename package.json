{
	"name": "@bicou/directus-extension-pdf-image",
	"description": "Directus extension to create a screenshot image for each uploaded PDF document",
	"icon": "extension",
	"homepage": "https://github.com/gbicou/directus-extension-pdf-image",
	"author": "Benjamin VIELLARD <bicou@bicou.com>",
	"license": "MIT",
	"repository": "github:gbicou/directus-extension-pdf-image",
	"version": "0.0.7",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-hook",
		"pdf",
		"image"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "hook",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"test": "vitest run",
		"lint": "eslint"
	},
	"dependencies": {
		"pdf-to-img": "^5.0.0"
	},
	"devDependencies": {
		"@directus/api": "32.1.1",
		"@directus/extensions-sdk": "17.0.3",
		"@directus/sdk": "20.2.0",
		"@eslint/js": "9.39.1",
		"@stylistic/eslint-plugin": "5.6.1",
		"@types/node": "22.19.1",
		"dotenv": "17.2.3",
		"eslint": "9.39.1",
		"rollup-plugin-node-externals": "8.1.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.48.0",
		"vitest": "4.0.14"
	},
	"peerDependencies": {
		"@directus/api": "^29.1.1 || ^32.0.0",
		"@directus/extensions-sdk": "^16.0.0 || ^17.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
	"pnpm": {
		"onlyBuiltDependencies": [
			"argon2",
			"canvas",
			"esbuild",
			"isolated-vm",
			"sharp"
		],
		"ignoredBuiltDependencies": [
			"oracledb",
			"sqlite3"
		]
	}
}
